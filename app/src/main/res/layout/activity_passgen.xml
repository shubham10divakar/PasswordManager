<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Passgen"
    android:orientation="vertical"
    android:background="@drawable/back"
    >
<android.support.design.widget.TextInputEditText
    android:id="@+id/passgen_len"
    android:layout_width="283dp"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="117dp"
    android:hint="ENTER LENGTH OF PASSWORD"
    android:inputType="number"
    tools:layout_editor_absoluteX="84dp"
    tools:layout_editor_absoluteY="95dp"
    android:autoSizeTextType="uniform"
    android:textColor="#ffffff"
     />
    <Button
        android:id="@+id/passgen_okbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="196dp"
        android:text="OK"
        android:background="@drawable/button1"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="186dp" />

    <TextView
        android:id="@+id/passgen_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="227dp"
        android:text="Password will be displayed here"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="298dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:maxEms="30"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="157dp"
        android:text="Long press on the password to copy"
        android:visibility="invisible"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

</RelativeLayout>